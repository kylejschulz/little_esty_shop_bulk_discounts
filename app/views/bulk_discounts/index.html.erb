<h1><%= @merchant.name %>'s discounts</h1>
<h2><a href="/merchant/<%=@merchant.id%>/bulk_discounts/new">new discount</a></h2>

<% @merchant.bulk_discounts.each do |discount| %>
  <section id="discount-<%= discount.id %>">
    <ul>
      <li><a href="/merchant/<%=@merchant.id%>/bulk_discounts/<%=discount.id%>"><%= discount.name %></a></li>
      <li>Discount: <%= discount.discount_int %>%</li>
      <li>Quantity Threshold: <%= discount.quantity_threshold %></li>
      <%= button_to "delete discount", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %>

    </ul>
  </section>
<% end %>
